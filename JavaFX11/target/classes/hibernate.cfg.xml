<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- Database connection properties -->
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/girlpowerutca</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">girlpowerutca</property>

        <!-- Other Hibernate configuration properties -->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">update</property>

        <!-- Connection pool size-->



        <!-- Mapping class -->
        <mapping class="hu.unideb.inf.entitypackage.User"/>
        <mapping class="hu.unideb.inf.entitypackage.Librarybook"/>
        <mapping class="hu.unideb.inf.entitypackage.Student"/>
    </session-factory>
</hibernate-configuration>